---
layout: layouts/base.njk
---
<div class="flex items-center mb-4">
  <div class="px-5 py-10 mx-auto border-t border-gray-200 sm:border-t-4 sm:border-gray-500 sm:border-dotted">
    <article class="mb-5 overflow-auto prose lg:prose-lg">{{ content | safe }}</article>

    {% set fields = form %}

    <form class="max-w-xl py-5 mx-auto border-t-2 border-gray-500 border-dotted sm:border-t-2 sm:border-solid sm:shadow-xl sm:p-8 sm:border-gray-100 sm:rounded-lg"
     id="main-form" name="main-{{ page.fileSlug }}">

      {% for field in fields %}
        {% if field.enum %}
          {% Group field.id, field.label  %}
            {% SelectField field.id, field.id, true, null, field.enum %}
          {% endGroup %}
        {% else %}
          {% Group field.id, field.label  %}
            <input {% Text field.id , field.id , "" , true %}>
          {% endGroup %}
        {% endif %}
      {% endfor %}

      <div class="flex flex-row-reverse rounded-b-lg">
        <button {% Button %}>Submit</button>
      </div>

    </form>
  </div>
</div>