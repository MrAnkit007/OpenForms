---
layout: layouts/base.njk
---
<div class="flex items-center mb-4">
  <div class="px-5 py-10 mx-auto border-t border-gray-200 sm:border-t-4 sm:border-gray-500 sm:border-dotted">
    <article class="mb-5 overflow-auto prose lg:prose-lg">{{ content | safe }}</article>

    {% set fields = form %}

    <form
     class="max-w-xl py-5 mx-auto border-t-2 border-gray-500 border-dotted sm:border-t-2 sm:border-solid sm:shadow-xl sm:p-8 sm:border-gray-100 sm:rounded-lg"
     id="main-form" name="main-{{ page.fileSlug }}" data-netlify=true>
      {% for field in fields %}
        {% if field.type === "selectfield" %}
          {% Group field.id, field.label, field.required  %}
            {% SelectField field.id, field.id, field.required, null, field.enum %}
          {% endGroup %}
        {% else %}
          {% Group field.id, field.label, field.required  %}
            <input {% Text field.id , field.id , "" , field.required %}>
          {% endGroup %}
        {% endif %}
      {% endfor %}
      <div class="flex flex-row-reverse">
        <button type="Submit" class="button">Submit</button>
      </div>
    </form>
  </div>
</div>